### Deployed by ansible role mysql-base

[mysqld]

## General
datadir                         = {{ datadir }}
tmpdir                          = {{ tmpdir }}
socket                          = {{ datadir }}/mysql.sock
skip_name_resolve
open_files_limit                = 65535
character_set_server            = utf8
collation_server                = utf8_unicode_ci
sql_mode                        = NO_ENGINE_SUBSTITUTION
performance_schema              = 0

##SSL Settings
# ssl_ca=/var/lib/mysql/ca-cert.pem
# ssl_cert=/var/lib/mysql/server-cert.pem
# ssl_key=/var/lib/mysql/server-key.pem

## Cache
thread_cache_size               = 16
table_open_cache                = 4096
table_definition_cache          = 2048
query_cache_size                = 0
query_cache_type                = 0
binlog_cache_size               = 65536
binlog_stmt_cache_size          = 65536

## Per_thread Buffers
sort_buffer_size                = 256K
read_buffer_size                = 256K
read_rnd_buffer_size            = 1M
join_buffer_size                = 256K

## Temp Tables
tmp_table_size                  = 32M
max_heap_table_size             = 64M

## Networking
back_log                        = 1000
max_connections                 = 4096
max_allowed_packet              = 128M
#max_connect_errors              = 1844674407370954751
#interactive_timeout             = 3600
#wait_timeout                    = 600

## MyISAM
key_buffer_size                 = 8M
myisam_sort_buffer_size         = 128M

## InnoDB
innodb_file_per_table           = 1
innodb_open_files               = 1024
innodb_log_file_size            = 256M
innodb_log_files_in_group       = 2

## InnoDB Buffer Pool
innodb_buffer_pool_instances    = 1
innodb_buffer_pool_size         = {{ (ansible_memtotal_mb*0.7)|round|int }}M
innodb_buffer_pool_dump_at_shutdown = 1
innodb_buffer_pool_load_at_startup  = 1

## InnoDB SSD Optimizations
#innodb_flush_neighbors          = 0
#innodb_read_io_threads          = 64
#innodb_write_io_threads         = 64

## InnoDB ACID
#innodb_flush_log_at_trx_commit  = 2
#transaction-isolation           = READ-COMMITTED

## Replication
server_id                       = {{ server_id }}
log_bin                         = {{ logdir }}/{{ server_id }}-{{ name }}-bin-log
log_bin_index                   = {{ logdir }}/{{ server_id }}-{{ name }}-bin-log.index
relay_log                       = {{ logdir }}/{{ server_id }}-{{ name }}-relay-log
relay_log_index                 = {{ logdir }}/{{ server_id }}-{{ name }}-relay-log.index
binlog_row_image                = minimal

relay_log_space_limit           = 16G
expire_logs_days                = 4
#log_slave_updates               = 1
#binlog_format                   = ROW
#auto_increment_offset           = 1
#auto_increment_increment        = 2
#slave_type_conversions          = ALL_NON_LOSSY
#read_only                       = 1

## Logging
log_output                      = FILE
slow_query_log                  = 1
slow_query_log_file             = {{ logdir }}/slow-log
log_slow_slave_statements
long_query_time                 = 0.5
log_slow_verbosity              = full
slow_query_log_timestamp_always    = true
slow_query_log_timestamp_precision = microsecond
slow_query_log_use_global_control  = all

[mysqld_safe]
log_error                       = /var/log/mysqld.log
open_files_limit                = 65535
malloc_lib                      = /usr/lib64/libjemalloc.so.1

[mysql]
no_auto_rehash
default_character_set           = utf8
